<script>
// --- Data ---
const data = {
  easy: [
    {question: "Where is the cat?", answer: "The cat is on the mat"},
    {question: "What do you like?", answer: "I like apples"},
    {question: "Who is your friend?", answer: "She is my friend"}
  ],
  medium: [
    {question: "What makes you smarter?", answer: "Reading books makes you smarter"},
    {question: "What should you do to improve?", answer: "Practice makes perfect"},
    {question: "What did the dog do?", answer: "The dog barked loudly"}
  ],
  hard: [
    {question: "Say tongue twister 1", answer: "She sells seashells by the seashore"},
    {question: "Say tongue twister 2", answer: "How much wood would a woodchuck chuck"},
    {question: "Say tongue twister 3", answer: "Peter Piper picked a peck of pickled peppers"}
  ]
};

let currentLevel = "easy";
let currentItem = {};
let usedItems = [];
let report = [];
let growth = 0;
const maxGrowth = 5;

function setLevel() {
  currentLevel = document.getElementById("level").value;
  usedItems = [];
  growth = 0;
  resetTree();
  document.getElementById("progress").innerText = "";
  nextQuestion();
}

function nextQuestion() {
  const pool = data[currentLevel];
  if(usedItems.length === pool.length) usedItems = [];
  const available = pool.filter(item => !usedItems.includes(item));
  currentItem = available[Math.floor(Math.random() * available.length)];
  usedItems.push(currentItem);

  document.getElementById("question").innerText = currentItem.question;
  document.getElementById("answer").value = "";
  document.getElementById("result").innerText = "";
  document.getElementById("progress").innerText = `Progress: ${usedItems.length}/${pool.length}`;
}

function playAnswer() {
  const utter = new SpeechSynthesisUtterance(currentItem.answer);
  utter.lang = "en-US";
  utter.rate = 0.8;
  speechSynthesis.speak(utter);
}

function checkAnswer() {
  const ans = document.getElementById("answer").value.trim().toLowerCase();
  const correct = currentItem.answer.toLowerCase();
  const isCorrect = ans === correct;
  document.getElementById("result").innerHTML = isCorrect
    ? "<span class='correct'>‚úÖ Correct! Your tree grows & flowers bloom!</span>"
    : "<span class='wrong'>‚ùå Wrong! Correct: "+currentItem.answer+"</span>";

  report.push({
    question: currentItem.question,
    answer: currentItem.answer,
    studentAnswer: document.getElementById("answer").value,
    correct: isCorrect ? "Yes" : "No"
  });

  if(isCorrect) {
    growTree();
    bloomFlower();
  }
  setTimeout(nextQuestion, 2000);
}

function downloadReport() {
  if(report.length === 0){ alert("No data to download!"); return; }
  let csv = "Question,Correct Answer,Your Answer,Correct\n";
  report.forEach(r => {
    csv += `"${r.question}","${r.answer}","${r.studentAnswer}","${r.correct}"\n`;
  });
  const blob = new Blob([csv], {type: "text/csv"});
  const link = document.createElement("a");
  link.href = URL.createObjectURL(blob);
  link.download = "listening_report.csv";
  link.click();
}

function growTree() {
  const tree = document.getElementById("tree");
  const leaves = document.getElementById("leaves");
  if(growth < maxGrowth) growth++;
  const treeHeight = growth * 40;
  tree.style.height = treeHeight + "px";
  leaves.style.bottom = (120 + treeHeight) + "px";
  leaves.style.opacity = 1;
}

function bloomFlower() {
  const flower = document.createElement("div");
  flower.className = "flower";
  const left = Math.random() * 550;
  flower.style.left = left + "px";
  flower.style.bottom = "120px";
  const colors = ["#F48FB1","#CE93D8","#81C784","#FFCDD2","#B39DDB"];
  flower.style.background = colors[Math.floor(Math.random()*colors.length)];
  document.body.appendChild(flower);
}

function resetTree() {
  document.getElementById("tree").style.height = "0px";
  const leaves = document.getElementById("leaves");
  leaves.style.opacity = 0;
}

nextQuestion();

// Animate container on load
window.addEventListener('load', () => {
  document.querySelector('.container').classList.add('visible');
});

   const video = document.getElementById('bg-video');
      video.playbackRate = 0.5; // slower playback

</script>

