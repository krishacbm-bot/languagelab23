<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<title>üåà Word to Sentence Adventure</title>
<style>
body {
  margin: 0;
  padding: 0;
  font-family: "Poppins", "Comic Sans MS", sans-serif;
  background: linear-gradient(to bottom, #b3e5fc, #e1f5fe);
  background-image: url('https://img.freepik.com/free-photo/beautiful-white-cloud-blue-sky_632498-1090.jpg?w=740&q=80');
  background-size: cover;
  background-attachment: fixed;
  text-align: center;
  color: #333;
  overflow-x: hidden;
}

/* -------- HEADER -------- */
h1 {
  font-size: 2.5em;
  color: #00796b;
  text-shadow: 2px 2px #ffffff;
  margin-top: 20px;
  animation: fadeIn 1s ease-in;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* -------- WORD AREA -------- */
#wordBox {
  display: inline-block;
  margin: 20px auto;
  background: rgba(255,255,255,0.8);
  padding: 20px 40px;
  border-radius: 50px;
  font-size: 1.4em;
  color: #004d40;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  animation: floaty 3s ease-in-out infinite;
}
@keyframes floaty {
  0%,100% { transform: translateY(0); }
  50% { transform: translateY(-6px); }
}

.label { font-weight: bold; color: #0288d1; }

/* -------- TEXT AREA -------- */
textarea {
  width: 70%;
  height: 100px;
  border: none;
  border-radius: 30px;
  padding: 20px;
  font-size: 1.1em;
  box-shadow: 0 4px 10px rgba(0,0,0,0.2);
  background: #fffde7;
  outline: none;
  margin-top: 10px;
}
textarea:focus {
  background: #fffff3;
}

/* -------- BUTTONS -------- */
button, select {
  font-size: 1.1em;
  padding: 10px 20px;
  margin: 10px;
  border-radius: 30px;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 8px rgba(0,0,0,0.2);
}
button:hover, select:hover {
  transform: scale(1.05);
}

#correctBtn {
  background: linear-gradient(45deg, #4fc3f7, #81d4fa);
  color: #004d40;
  font-weight: bold;
}
#playCorrected {
  background: linear-gradient(45deg, #ffb74d, #ffcc80);
  color: #4e342e;
  font-weight: bold;
}
#downloadReportBtn {
  background: linear-gradient(45deg, #81c784, #aed581);
  color: #1b5e20;
  font-weight: bold;
}

/* -------- RESULT SECTION -------- */
#original, #corrected {
  margin-top: 15px;
  font-size: 1.2em;
  background: rgba(255,255,255,0.6);
  display: inline-block;
  padding: 15px 25px;
  border-radius: 40px;
  box-shadow: 0 3px 8px rgba(0,0,0,0.1);
}
#message {
  font-size: 1.2em;
  font-weight: bold;
  margin: 15px 0;
}
.correct { color: #2e7d32; }
.error { color: #c62828; }

/* -------- FLOATING BALLOONS -------- */
.balloons span {
  position: absolute;
  bottom: -150px;
  width: 40px;
  height: 50px;
  background: radial-gradient(circle at 50% 35%, #fff176, #ffca28);
  border-radius: 50%;
  opacity: 0.8;
  animation: rise 8s infinite ease-in;
}
.balloons span:nth-child(2) {
  left: 20%;
  background: radial-gradient(circle at 50% 35%, #90caf9, #64b5f6);
  animation-delay: 2s;
}
.balloons span:nth-child(3) {
  left: 60%;
  background: radial-gradient(circle at 50% 35%, #f48fb1, #f06292);
  animation-delay: 4s;
}
@keyframes rise {
  0% { transform: translateY(0) scale(1); opacity: 0.8; }
  100% { transform: translateY(-800px) scale(1.1); opacity: 0; }
}
.back-btn{
  margin: 11px  50px;
  display: block;
  padding: 8px 18px;
  border-radius: 22px;
  border: none;
  background: #ff6f61;
  color: #fff;
  font-weight: bold;
  cursor: pointer;
  font-size: 15px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.15);
  transition: transform 0.2s, box-shadow 0.2s;
}
.back-btn:hover{
  transform: scale(1.08);
  box-shadow: 0 6px 16px rgba(0,0,0,0.25);
}
</style>
</head>

<body>
  <h1>üåü Word to Sentence Adventure üåü</h1>
<button id="backBtn" class="back-btn">‚¨ÖÔ∏è Back</button>
  <div class="topBar">
    <label>üéØ Level:</label>
    <select id="levelSelect">
      <option value="easy">Easy</option>
      <option value="medium">Medium</option>
      <option value="hard">Hard</option>
    </select>
  </div>

  <div id="wordBox">
    <span class="label">Word:</span> <span id="word">‚Äî</span><br>
    <span class="label">Meaning:</span> <span id="meaning">‚Äî</span>
  </div>

  <div>
    <textarea id="inputText" placeholder="Type your sentence here... ‚úèÔ∏è"></textarea>
  </div>

  <div>
    <button id="correctBtn">‚úÖ Check & Correct</button>
    <button id="playCorrected" disabled>üîä Play Sentence</button>
    <!-- <select id="voiceRate">
      <option value="0.8">üê¢ Slow</option>
      <option value="1" selected>üôÇ Normal</option>
      <option value="1.3">üêá Fast</option>
    </select> -->
  </div>

  <div id="original"><strong>üó£ You Said:</strong> <span id="origText">‚Äî</span></div><br>
  <div id="corrected"><strong>‚úÖ Corrected:</strong> <span id="corrText">‚Äî</span></div>
  <div id="message"></div>

  <button id="downloadReportBtn">üìÑ Download Report</button>

  <div class="balloons">
    <span></span><span></span><span></span>
  </div>
<script type="module">
import { wordsData } from './static/wordsData.js';

function getGradeFromURL() {
  const params = new URLSearchParams(window.location.search);
  return params.get('grade');
}
function mapGradeToKey(grade) {
  const map = {
    "jr_kg": "jr_kg", "sr_kg": "sr_kg",
    "1": "grade1", "2": "grade2", "3": "grade3", "4": "grade4", "5": "grade5",
    "6": "grade6", "7": "grade7", "8": "grade8", "9": "grade9", "10": "grade10",
    "11": "grade11", "12": "grade12"
  };
  return map[grade] || "jr_kg";
}

document.addEventListener("DOMContentLoaded", () => {
  const wordEl = document.getElementById("word");
  const meaningEl = document.getElementById("meaning");
  const inputText = document.getElementById("inputText");
  const correctBtn = document.getElementById("correctBtn");
  const playBtn = document.getElementById("playCorrected");
  const origText = document.getElementById("origText");
  const corrText = document.getElementById("corrText");
  const message = document.getElementById("message");
  const levelSelect = document.getElementById("levelSelect");
  const downloadBtn = document.getElementById("downloadReportBtn");

  let grade = mapGradeToKey(getGradeFromURL());
  if (!wordsData[grade]) grade = "jr_kg";

  let currentLevel = "easy";
  let index = 0;
  let lastCorrected = "";
  let reportData = [];

  const levels = ["easy", "medium", "hard"];

  function getWords() {
    return wordsData[grade]?.[currentLevel] || [];
  }

  function showWord() {
    const words = getWords();
    if (index >= words.length) {
      const nextLevel = levels[levels.indexOf(currentLevel) + 1];
      if (nextLevel) {
        // Move to next level automatically
        message.innerHTML = `<span class="correct">üåü Great! Moving to <b>${nextLevel}</b> level...</span>`;
        currentLevel = nextLevel;
        levelSelect.value = nextLevel;
        index = 0;
        setTimeout(() => showWord(), 2000);
      } else {
        // All levels done
        message.innerHTML = '<span class="correct">üéâ You‚Äôve completed all levels!</span>';
        wordEl.textContent = "üèÅ Done!";
        meaningEl.textContent = "‚Äî";
        inputText.disabled = true;
        correctBtn.disabled = true;
        playBtn.disabled = true;
      }
      return;
    }

    const w = words[index];
    wordEl.textContent = w.word;
    meaningEl.textContent = w.meaning;
    inputText.value = "";
    origText.textContent = "‚Äî";
    corrText.textContent = "‚Äî";
    message.textContent = "";
    playBtn.disabled = true;
  }

  levelSelect.addEventListener("change", () => {
    currentLevel = levelSelect.value;
    index = 0;
    inputText.disabled = false;
    correctBtn.disabled = false;
    showWord();
  });

  correctBtn.addEventListener("click", async () => {
    const txt = inputText.value.trim();
    if (!txt) { message.innerHTML = '<span class="error">Please type a sentence!</span>'; return; }
    origText.textContent = txt;
    message.textContent = "‚ú® Checking...";
    try {
      const params = new URLSearchParams();
      params.append("language", "en-US");
      params.append("text", txt);
      const res = await fetch("https://api.languagetool.org/v2/check", {
        method: "POST",
        headers: {"Content-Type": "application/x-www-form-urlencoded"},
        body: params.toString()
      }).then(r => r.json());
      let corrected = txt;
      res.matches.forEach(m => {
        if (m.replacements && m.replacements.length)
          corrected = corrected.slice(0, m.offset) + m.replacements[0].value + corrected.slice(m.offset + m.length);
      });
      corrected = corrected.charAt(0).toUpperCase() + corrected.slice(1);
      if (!/[.!?]$/.test(corrected)) corrected += ".";
      corrText.textContent = corrected;
      lastCorrected = corrected;
      playBtn.disabled = false;

      const w = getWords()[index];
      let result;
      if (corrected.toLowerCase().includes(w.word.toLowerCase())) {
        message.innerHTML = '<span class="correct">‚úÖ Correct! Moving to next word...</span>';
        result = "‚úÖ Correct";
        // Move to next word only if correct
        setTimeout(() => {
          index++;
          showWord();
        }, 2000);
      } else {
        message.innerHTML = `<span class="error">‚ùå You missed the word "${w.word}". Try again.</span>`;
        result = "‚ùå Missed";
      }

      // Save in report
      reportData.push({
        word: w.word,
        meaning: w.meaning,
        studentSentence: txt,
        correctedSentence: corrected,
        result: result
      });

    } catch (e) {
      message.innerHTML = `<span class="error">${e.message}</span>`;
    }
  });

  playBtn.addEventListener("click", () => {
    const u = new SpeechSynthesisUtterance(lastCorrected);
    u.lang = "en-US";
    u.rate = 1;
    speechSynthesis.speak(u);
  });

  // Download Report as CSV
  downloadBtn.addEventListener("click", () => {
    if (!reportData.length) {
      alert("‚ö†Ô∏è No data yet! Complete at least one sentence first.");
      return;
    }
    const header = ["Word", "Meaning", "Student Sentence", "Corrected Sentence", "Result"];
    const rows = reportData.map(r =>
      [r.word, r.meaning, r.studentSentence, r.correctedSentence, r.result].map(v => `"${v.replace(/"/g, '""')}"`).join(",")
    );
    const csvContent = [header.join(","), ...rows].join("\n");
    const blob = new Blob([csvContent], { type: "text/csv" });
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = `WordToSentence_Report_${grade}_${currentLevel}.csv`;
    a.click();
    URL.revokeObjectURL(url);
  });

  showWord();
  const backBtn = document.getElementById("backBtn");

if (backBtn) {
  backBtn.addEventListener("click", () => {
    // If there is history, go back
    if (window.history.length > 1) {
      window.history.back();
    } else {
      // Fallback (safe home page)
      window.location.href = "index.html";
    }
  });
}
});
</script>

</body>
</html>